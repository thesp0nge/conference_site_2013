- error = @slot.errors.key?(:ordinal) && @slot.errors[:ordinal].count > 0
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :ordinal, :class => 'control-label'
  .controls
    =f.text_field :ordinal, :class => 'input-xlarge input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:ordinal, :class => 'text-error') : pat(:example)
